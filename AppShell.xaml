<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="HireAfrica.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:HireAfrica.Pages"
    Shell.FlyoutBehavior="Flyout"
    Title="HireAfrica">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Sign In"
        ContentTemplate="{DataTemplate local:SignIn}"
        Route="Sign In"/>
    <ShellContent
      Title="Job Board"
      ContentTemplate="{DataTemplate local:JobBoard}"
      Route="Job Board"/>
    <ShellContent
     Title="Candidate List"
     ContentTemplate="{DataTemplate local:Candidatelist}"
     Route="Candidate List"/>
</Shell>
